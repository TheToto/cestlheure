{% extends "global.twig" %}

{% block body %}
    <div class="row">
        <div class="col-6">
            <h2>Classement global</h2>
            <ul class="list-group">
                {% for item in global %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">{{ item.sender[0].name }}
                        <span class="badge badge-secondary">{{ item.count }}
                            point(s)</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-6">
            <h2>Classement du mois</h2>
            <ul class="list-group">
                {% for item in month %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">{{ item.sender[0].name }}
                        <span class="badge badge-secondary">{{ item.count }}
                            point(s)</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
